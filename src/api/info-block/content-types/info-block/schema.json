{
  "kind": "collectionType",
  "collectionName": "info_blocks",
  "info": {
    "singularName": "info-block",
    "pluralName": "info-blocks",
    "displayName": "InfoBlock"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "text": {
      "type": "blocks",
      "required": true
    },
    "image": {
      "allowedTypes": [
        "images"
      ],
      "type": "media",
      "multiple": false,
      "required": true
    },
    "ImageToTheRight": {
      "type": "boolean",
      "default": false,
      "required": true
    },
    "button": {
      "displayName": "button",
      "type": "component",
      "repeatable": false,
      "component": "info-block.button"
    }
  }
}
